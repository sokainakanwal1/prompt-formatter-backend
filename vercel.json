{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"],
        "maxDuration": 30
      }
    },
    {
      "src": "api/format.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"],
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/format",
      "dest": "/api/format.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
